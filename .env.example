# Meta / Graph API
META_API_BASE_URL=https://graph.facebook.com/v23.0

# Jobs: horarios y control
JOBS_TIMEZONE=Europe/Madrid
JOBS_AUTO_START=false
JOBS_ADS_SCHEDULE=30 3 * * *
JOBS_METRICS_SCHEDULE=0 2 * * *
JOBS_TOKEN_VALIDATION_SCHEDULE=0 */6 * * *
JOBS_CLEANUP_SCHEDULE=0 3 * * 0
JOBS_HEALTH_CHECK_SCHEDULE=0 * * * *

# Ads sync: ventanas y límites (mitigar 500 de Meta)
# Días por chunk de insights/actions (1..7 recomendado)
ADS_CHUNK_DAYS=3
# Límite por página en insights/actions (50..200 recomendado)
ADS_PAGE_LIMIT=100
# Límite por página en listado de ads (entities). El código baja a 25 si hay 500.
ADS_ENTITIES_LIMIT=50
# Ventanas usadas por el job de ads: primera sync vs recents
ADS_SYNC_INITIAL_DAYS=30
ADS_SYNC_RECENT_DAYS=7
ADS_SYNC_BACKFILL_DAYS=28
ADS_SYNC_BETWEEN_ACCOUNTS_SLEEP_MS=60000

# Cliente Meta (throttling)
METASYNC_REQUEST_DELAY_MS=300
METASYNC_RATE_LIMIT_THRESHOLD=90
METASYNC_MAX_RETRIES=3
METASYNC_WAIT_NEXT_HOUR_ON_LIMIT=true

# App
PORT=3000
JWT_SECRET=please-change-me

# DB (usadas por Sequelize)
DB_USERNAME=
DB_PASSWORD=
DB_NAME=
DB_HOST=localhost
